@import "fonts.styl"
gris_claro = #818181
gris_mas_claro = #F0F0F0
gris_oscuro = #333333

body
	font-family: 'Open Sans', sans-serif;
h1
	font-weight 700
	text-transform uppercase
h2
	font-weight 700
h4
	text-transform uppercase
.navbar-custom
	background-color: #2e2e2e;
	font-weight:700;
	text-transform:uppercase;
	border-width:0;
	color: #ddd;
.navbar-nav
	margin: 1px 1px; 
.white
	color white
.first
	position relative
	width 100%
	height 5
	
		
.margin-cero
	margin 0 auto

.nav-justified
	li
		float none
		a
			color white
.second
	padding 6em
	text-align center
	font-weight bold
	h1
		border-bottom 1px solid gris_claro
		padding 0.5em
		margin-bottom 0.5em
	p
		font-size 1.2em
		margin-top 0.5em
.third
	height 25em
	div
		margin-top 10em
		font-weight 800
		
.right
	float right

.fourth
	background-image: -webkit-gradient(linear, left top, left bottom, from(rgba(20,20,20,0.2)),to(rgba(255,255,255,0)), color-stop(1,#000));
	padding 3em
	
.descripcion
	background white
	position relative
	text-align center
	figure
		width 100%
		img
			width 100%
.des
	border-top 1px solid gris_claro
	p
		padding 1em
		text-align justify
		font-weight 600px
.fifth
.third
	div
		h2
			color: white; 
			padding: 20px;
			background-color: rgba(5,5,5,.8)
			text-transform uppercase
.sixth
	padding 2em
	text-align center
	text-transform uppercase

.social
	margin-top 3em
	a
		color gris_claro
		font-size 3em
		padding 1em
		&:hover
			font-size 3.2em
.mapArea
	height:500px;
	overflow:hidden;
	width:100%;
	margin:0;

.mapArea 
	iframe
		width:100%;
		height:100%;

.footer
	margin 0 auto
	padding 3em
	background gris_mas_claro
	text-align center




/************ Estilos de Posts *************/

#bodyPost
	background gris_claro

header
	background gris_oscuro
	color white
	margin 0 auto
	position fixed
	width 100%
	top 0
	text-align center
	display inline-block
	z-index 10
	.nombre
		margin 0 auto
		width 50%
	.back
		float right
		display inline-block
		position absolute
		right 0
		top 1.5em
		a
			color white
			font-size 1.2em
			text-transform uppercase
		
.post
	background gris_mas_claro
	width 70%
	margin 0 auto
	padding 3em
	margin-top 7em
	box-shadow 0px 2px 2px 0px gris_oscuro
	h2
		color black
	p
		color black
	
.avatar
	width 80%
	position absolute
	top -4em
	right 0	
	img
		width 100%
		height 15em
		border-radius 50%
		
.resumen
	width 60%
	padding 1em
.titulo
	width 70%


/*******************Estilo del Post Detallado **********//////


.postDetail
	margin 0 auto	
	margin-top 10em
	width 70%
	.tituloDetail
		text-align center
		border-bottom 1px solid gris_oscuro
		margin-bottom 2em
	.parrafo
		font-size 1.2em
		border-bottom 1px solid gris_oscuro
	.archivos
		border-bottom 1px solid gris_oscuro
		ul
			list-style none
			li
				display inline-block


/************Formulario**************/

.formulario
	width 50%
	margin 0 auto
	margin-top 10em
	


/************Administracion *************/
.menu
	margin-top 15em
	a
		text-decoration none
.contentMenu
	background white
	height 20em
	.icon
		margin 0 auto
		text-align center
		padding 5em
		border-bottom 1px solid gris_mas_claro
		span
			color gris_claro
			font-size 7em
	.tituloMenu
		text-align center
		color gris_claro
		font-size 1.5em
	&:hover
		box-shadow 0px 2px 2px 0px gris_oscuro
		
.login
	margin 0 auto
	margin-top 10em
	width 30%
	background gris_mas_claro
	padding 2em
	box-shadow 0px 2px 2px 0px gris_oscuro

@media screen and (max-width:992px)

	.avatar
		display none
	
	.titulo
		width 100%
	
	.resumen
		width 90%
	
	.post
		width 90%
